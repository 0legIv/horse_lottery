<h1>Listing Horses</h1>

<table>
  <thead>
    <tr>
      <th>Colour</th>
      <th>Genotype</th>
      <th>Lottery</th>
      <th>Name</th>
      <th>Rating</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for horse <- @horses do %>
    <tr>
      <td><%= horse.colour %></td>
      <td><%= horse.genotype %></td>
      <td><%= horse.lottery %></td>
      <td><%= horse.name %></td>
      <td><%= horse.rating %></td>

      <td>
        <span><%= link "Show", to: Routes.horse_path(@conn, :show, horse) %></span>
        <span><%= link "Edit", to: Routes.horse_path(@conn, :edit, horse) %></span>
        <span><%= link "Delete", to: Routes.horse_path(@conn, :delete, horse), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Horse", to: Routes.horse_path(@conn, :new) %></span>
